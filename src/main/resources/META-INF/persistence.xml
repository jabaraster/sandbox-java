<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
    xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="LMap" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>jabara.jpa.entity.EntityBase</class>
        <validation-mode>CALLBACK</validation-mode>

        <properties>
            <!-- この記述はなくても動作・・・してほしい.
                 少なくともH2DatabaseとPostgresSQLではなくても動作した.
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            -->
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.use_sql_comments" value="true" />
            <property name="hibernate.format_sql" value="true" />

            <!-- JPA起動時にテーブルを再作成する設定. 以下の環境変数によって設定を上書きできます.. HIBERNATE_HBM2DDL_AUTO -->
            <property name="hibernate.hbm2ddl.auto" value="none" />

        </properties>

    </persistence-unit>

    <persistence-unit name="LMap_Local" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <non-jta-data-source>jdbc/LMap</non-jta-data-source>
        <class>jabara.jpa.entity.EntityBase</class>
        <validation-mode>CALLBACK</validation-mode>

        <properties>
            <!-- この記述はなくても動作・・・してほしい.
                 少なくともH2DatabaseとPostgresSQLではなくても動作した.
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            -->
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.use_sql_comments" value="true" />
            <property name="hibernate.format_sql" value="true" />

            <!-- JPA起動時にテーブルを再作成する設定. 以下の環境変数によって設定を上書きできます.. HIBERNATE_HBM2DDL_AUTO -->
            <property name="hibernate.hbm2ddl.auto" value="none" />

        </properties>

    </persistence-unit>
</persistence>
